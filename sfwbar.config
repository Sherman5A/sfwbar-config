# Override gtk theme
# theme = "Adwaita-dark"
# Override gtk icon theme
# IconTheme = "Adwaita"

Set Term = "foot"

# Window Placer
placer {
  xorigin = 5  # place the first window at X% from the left
  yorigin = 5  # place the first window at X% from the top
  xstep = 5    # step by X% of desktop horizontally
  ystep = 5    # step by X% of desktop vertically
  children = true
}

# Task Switcher
switcher {
  interval = 700
  icons = true
  labels = false
  cols = 5
}

function("SfwbarInit") {
#  Config "PopUp 'XVolumeWindow' { AutoClose = true }"
}

include("winops.widget")

# Panel layout

layout {

  mirror = "*"
  layer = "top"
  bar_id = "bar-0"
  #  sensor = 700
  monitor = "eDP-1"

  include("startmenu.widget")

  grid {
    style="start-menu"
    label {
      style="start-menu-curve"
    }
  }

  grid {
    style = "launcher-bar"
    button {
      style = "launcher"
      value = $Term
      action = Exec $Term
    }
    button {
      style = "launcher"
      value = "firefox"
      action = "firefox-bin"
    }
  }

  label {
    # Stretch horizontally
    css = "* { -GtkWidget-hexpand: true; -FlowGrid-column-homogeneous: true; }" 
  }

# Uncomment the below section if you would like a pager
#  pager {
#    style = "pager"
#    rows = 1
#    preview = true
#    numeric = true
#  }

  # taskbar {
  #   rows = 1
  #   css = "* { -GtkWidget-hexpand: true; -FlowGrid-column-homogeneous: true; }" # stretch horizontally
  #   labels = false
  #   # group = pager  # remove this line if you don't want a multi-desktop taskbar
  #   group icons = true
  #   group labels = true
  #   sort = true
  #   numeric = true
  #   action[RightClick] = Menu "winops"
  #   action[MiddleClick] = Close
  #   action[Drag] = Focus
  # }

  # include("cpu.widget")
  # include("memory.widget")

  grid {
    style="right-edge"
    label {
      style="right-edge-curve"
    }
    tray {
      style="tray"
      rows = 1
    }

    grid {
      style="volume-wrapper"
      grid {
        style = "volume-curve"
        label {
          style = "volume-curve"
        }
      }
      include("volume.widget")
    }

    grid {
      style="network-wrapper"
      grid {
        style = "network-curve"
        label {
          style = "network-curve"
        }
      }
      include("network-module.widget")
    }
    # include("bluez.widget")

    # Not using as the python script is incompatible with autohide
    # include("battery.widget")
    grid {
      style="battery-wrapper"
      grid {
        style = "battery-curve"
        label {
          style = "battery-curve"
        }
      }
      include("battery-text-icon.widget")
      include("mpd-intmod.widget")
      include("watts.widget")
      # include("sway-lang.widget")
    }

    grid {
      style="date-wrapper"
      grid {
        style="date-curve"
        label {
          style = "date-curve"
        }
      }
      label {
        style="date"
        value = Time("%a, %e %b")
      }
    }

    grid {
      style="time-wrapper"
      label {
        style="time"
        value = Time("%k:%M")
      }
    }
  }
}

#CSS
@define-color theme_text_color white;
@define-color theme_bg_color black;
@define-color theme_fg_color white;
@define-color borders rgba(255,255,255,0.3);
/* Bar colours */
@define-color menu rgba(255, 0, 255, 1);
@define-color launcher rgba(255, 255, 0, 1);
@define-color tray rgba(200, 0, 200, 1);
@define-color volume rgba(125, 125, 255, 1);
@define-color network rgba(0, 255, 255, 1);
@define-color battery rgba(0, 255, 0, 1);
@define-color date rgba(255, 125, 255, 1);
@define-color time rgba(255, 0, 255, 1);

window#sfwbar {
  -GtkWidget-direction: top;
  background-color: rgba(0,0,0,0.6);
}

grid#layout {
  -GtkWidget-direction: right;
  min-height: 30px;
}

grid {
  padding: 0px;
  margin: 0px;
}

tooltip {
  background-color: @theme_bg_color;
}

image {
  min-width: 18px;
  min-height: 18px;
  box-shadow: none;
  border: none;
  border-image: none;
  background-image: none;
  background: none;
  -gtk-icon-shadow: none;
}

button {
  box-shadow: none;
  border-image: none;
  background-image: none;
  background: none;
  outline-style: none;
}

menu {
  background-color: black;
  border: 1px solid @borders;
  padding: 3px;
}

menu arrow {
  background-color: rgba(0,0,0,0);
  color: @theme_text_color;
}

menuitem {
  color: @theme_text_color;
  padding: 2px;
}

menu image {
  padding-right: 5px;
}

progressbar trough {
  background-color: rgba(255, 255, 255, 0.5);
  border-color: rgba(255,255,255,0.5);
}

#hidden {
  -GtkWidget-visible: false;
}

grid#taskbar_pager_active,
grid#taskbar_pager_normal {
  padding-right: 3px;
  padding-left: 3px;
  border-radius: 4px;
  border: solid rgba(119,119,119,0.3) 1px;
}

button#taskbar_normal image,
button#taskbar_active image,
button#taskbar_normal:hover image {
  min-width: 24px;
  min-height: 24px;
}

button#taskbar_normal label,
button#taskbar_active label,
button#taskbar_normal:hover label {
  padding: 0px 0px 0px 5px;
  -GtkWidget-hexpand: false;
}

button#taskbar_normal,
button#taskbar_active,
button#taskbar_normal:hover {
  padding: 0px 5px 0px 5px;
  border-radius: 4px;
  background-color: rgba(119,119,119,0.2);
  border-color: rgba(119,119,119,0.3);
  -GtkWidget-hexpand: false;
}

button#taskbar_active {
  background-color: rgba(255,255,255,0.2);
  border-color: rgba(255,255,255,0.4);
}

button#taskbar_normal:hover,
button#taskbar_active:hover {
  background-color: rgba(176,176,176,0.22);
  border-color: rgba(234,234,234,0.44);
}

grid#taskbar_pager_normal button,
grid#taskbar_pager_active button,
button#pager_normal,
button#pager_visible,
button#pager_focused {
  padding: 0px 5px 0px 5px;
  border-radius: 4px;
  border-color: rgba(119,119,119,0);
}

button#pager_focused {
  background-color: rgba(119,119,119,0.2);
  border: none;
}

button#pager_preview {
  border-radius: 0;
  border-color: #000000;
  border-width: 0.25mm;
  color: #777777;
  min-width: 5cm;
  min-height: 2.8125cm;
}

grid#switcher_active image,
grid#switcher_active {
  min-width: 60px;
  min-height: 60px;
  border-image: none;
  padding: 6px;
  background-color: #777777;
  border: 0px;
  box-shadow: none;
  border-radius: 1.25mm;
  -GtkWidget-hexpand: true;
}

grid#switcher_normal image,
grid#switcher_normal {
  min-width: 60px;
  min-height: 60px;
  padding: 6px;
  -GtkWidget-direction: right;
  -GtkWidget-hexpand: true;
}

window#switcher { 
  background-color: rgba(0,0,0,0);
  padding: 6px; 
  -GtkWidget-hexpand: true;
}

grid#switcher { 
  border-radius: 6px;
  background-color: @theme_bg_color;
  border: 1px solid @borders;
  padding: 6px;
  box-shadow: none;
  -GtkWidget-hexpand: true;
}

button#tray_active,
button#tray_passive,
button#tray_attention {
  padding: 0px 1px 0px 0px;
  border: none;
  margin: 0px;
  -GtkWidget-valign: center;
}

button#tray_passive {
  -GtkWidget-visible: false;
}

button#start-menu image,
button#module image{
  -ScaleImage-color: @theme_text_color;
  -ScaleImage-symbolic: true;
}

button#module,
button#launcher,
button#showdesktop,
button#start-menu {
  padding: 0px 3px 0px 3px;
  border: none;
  -GtkWidget-valign: center;
}

button#start-menu {
  /* background: rgba(255, 255, 0, 1); */
  /* border: 1px solid;
   * border-radius: 4px;
   */
  border-width: 0px;
}

button#start-menu image {
  min-width: 18px;
  min-height: 18px;
  padding: 1px;
}

chart#cpu_chart {
  background: rgba(127,127,127,0.3);
  min-width: 9px;
  margin: 2px;
  border: 1px solid @borders;
  color: red;
}

progressbar#memory {
  -GtkWidget-direction: top;
  min-width: 9px;
  border: 1px solid @borders;
  margin: 2px;
}

progressbar#memory trough {
  min-height: 2px;
  min-width: 9px;
  border: none;
  border-radius: 0px;
  background: rgba(127,127,127,0.3);
}

progressbar#memory progress {
  -GtkWidget-hexpand: true;
  min-width: 9px;
  border-radius: 0px;
  border: none;
  margin: 0px;
  background-color: alpha(green,0.9);
}

label#sway_lang {
  margin-left: 3px;
  margin-right: 5px;
}

label {
  font: 12px Sans;
  color: @theme_text_color;
  text-shadow: none;
}

/* Left side of start menu */

grid#start-menu-wrapper {
  background: @menu;
  padding: 0px 8px 0px 18px;
}

label#start-menu-curve {
  background: @menu;
  border-radius: 0px 20px 20px 0px;
  padding-left: 18px;
}

grid#start-menu {
  background: @launcher;
}

grid#launcher-bar {
  background: @launcher;
  padding: 0px 20px 0px 15px;
  border-radius: 0px 20px 20px 0px;
}

grid#launcher-bar * {
  margin-right: 4px;
}

/* Right side of start menu */

grid#right-edge {
  background: @tray;
  border-radius: 20px 0px 0px 20px;
  padding: 0px 0px 0px 20px;
}

grid#volume-wrapper {
  padding-right: 5px;
  background: @volume;
}

grid#volume-curve {
  background: @tray;
}

label#volume-curve {
  padding: 0px 10px;
  border-radius: 20px 0px 0px 20px;
  background: @volume;
}

grid#network-wrapper {
  padding-right: 5px;
  background: @network;
}

grid#network-curve {
  background: @volume;
}

label#network-curve {
  padding: 0px 10px;
  border-radius: 20px 0px 0px 20px;
  background: @network;
}

grid#battery-wrapper {
  padding-right: 5px;
  background: @battery;
}

grid#battery-curve {
  background: @network;
}

label#battery-curve {
  padding: 0px 10px;
  border-radius: 20px 0px 0px 20px;
  background: @battery;
}

grid#date-wrapper{
  background: @date;
}

grid#date-curve {
  background: @battery;
}

label#date-curve {
  padding: 0px 10px;
  border-radius: 20px 0px 0px 20px;
  background: @date;
}

label#date{
  /* padding: 0px 10px; */
  padding-right: 10px;
}

grid#time-wrapper {
  background: @date;
}

label#time {
  background: @time;
  padding: 0px 10px;
  border-radius: 20px 0px 0px 20px;
}

